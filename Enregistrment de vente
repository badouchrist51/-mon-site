<script>
    // Logique JavaScript
    const form = document.getElementById('salesForm');
    const table = document.getElementById('salesTable');
    const totalDisplay = document.getElementById('grandTotal');
    let totalGlobal = 0;

    form.addEventListener('submit', (e) => {
        e.preventDefault();
        
        const p = document.getElementById('prod').value;
        const pr = parseFloat(document.getElementById('prix').value);
        const q = parseInt(document.getElementById('qte').value);
        const t = pr * q;

        const row = table.insertRow();
        row.innerHTML = `
            <td>${p}</td>
            <td>${pr.toLocaleString()}</td>
            <td>${q}</td>
            <td class="row-total" data-value="${t}">${t.toLocaleString()} FCFA</td>
            <td><button class="btn btn-sm btn-outline-danger" onclick="this.parentElement.parentElement.remove(); updateTotal();">X</button></td>
        `;

        updateTotal();
        form.reset();
    });

    function updateTotal() {
        let sum = 0;
        document.querySelectorAll('.row-total').forEach(td => {
            sum += parseFloat(td.getAttribute('data-value'));
        });
        totalDisplay.innerText = sum.toLocaleString();
    }
</script>
